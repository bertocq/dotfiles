#!/bin/bash

# Bash
alias ll='ls -la'
alias reload="source ~/.bash_profile"
alias cat='ccat'

# Git
alias g='git'
alias gs='git st'
alias gd='git gd'
alias gds='git gds'
alias gdf='git gdf'
alias gdsf='git gdsf'
alias ga='git add'
alias gaa='git add .'
alias gai='git add -i'
alias gl='git lg'
alias gcm='git cm'
alias gucm='git ucm'
alias p='git p'
alias P='git push'
alias PU='git pu'
alias PR="git PR"
alias PRO='~./dotfiles/github-pull-request'
alias go='git browse'
alias rpo='git rpo'
alias clearb='git clearb'
alias ru='git ru'
alias rubo='git rubo'
alias cop='rubocop -a `git diff --name-only master..HEAD`'
alias onlycop='rubocop -a --only'

# Ruby
alias be='bundle exec'
alias br='bundle exec rake'
alias sp='bundle exec rspec'
alias spt='bundle exec rspec --tag'
alias spc='bundle exec rspec --color --format documentation --require spec_helper --require rails_helper spec'
alias spr='bundle exec rspec --order rand'
alias sps='bundle exec rspec --seed'
alias rc='rails c'
alias rs='rails s'
alias rf='redis-cli flushall'
alias fs="foreman start"
alias db_reset='rake db:drop && rake db:create && rake db:migrate && rake db:migrate RAILS_ENV=test && rake db:dev_seed'
# Dev
alias s='subl'
alias unused='git ctags; cat ./.git/tags | unused --stdin -C'

# Heroku Belt
alias hl='heroku logs -t -a'
alias hb='heroku run bash -a'
alias hc='heroku run console -a'
alias hce='heroku run iex -S mix -a'
alias ha='heroku apps'
alias hco='heroku config -a'
alias hcos='heroku config:set'
alias hcou='heroku config:unset'
alias hps='heroku pg:psql -a'
alias hr='heroku restart -a'

# OSX
alias webcam='sudo killall VDCAssistant; sudo killall AppleCameraAssistant'
alias update='sudo softwareupdate -ia; brew doctor; brew update; brew upgrade; brew cleanup; brew prune; brew cask cleanup; mas upgrade; gem update --system; brewfile'
alias wifi='wifi-password'
alias brewfile='brew bundle dump --force'
alias cmds="sed 's/|/\n/g' ~/.bash_history | awk '{CMD[\$1]++;count++;}END { for (a in CMD)print CMD[a] \" \" CMD[a]/count*100 \"% \" a;}' | grep -v \"./\" | column -c3 -s \" \" -t | sort -nr | nl |  head -n50"
alias btime="pmset -g batt | awk '/^ /{print \$5}'"
alias lock='open -a /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app'
alias slack_theme='killall Slack; curl https://gist.githubusercontent.com/bertocq/b11df700f7829e71630b6bbeb6ebd7b1/raw/85f2f38307a2641d1aff443eb8e0eb262a098519/slack_dark_theme.js | cat >> ~/../../Applications/Slack.app/Contents/Resources/app.asar.unpacked/src/static/index.js; open -a Slack'
